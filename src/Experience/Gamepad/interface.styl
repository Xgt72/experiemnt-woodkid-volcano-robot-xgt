$width = 600px
$height = 400px

.gamepad-interface
    position fixed
    top 0
    left 0
    width $width
    height $height
    border 1px solid #ffffff

    .input
        &.is-button
            position absolute
            top 0
            left 0
            width 5%
            aspect-ratio 1 / 1
            border-radius 50%
            border 2px solid #ffffff
            transform translate(-50%, -50%)

            &.is-active
                &::after
                    opacity 1

            &.is-buttonB
                top: calc(50% + 0%)
                left calc(50% + 25%)
                transform translate(-50%, -50%) translateX(100%)

            &.is-buttonY
                top: calc(50% + 0%)
                left calc(50% + 25%)
                transform translate(-50%, -50%) translateY(-100%)
            
            &.is-buttonX
                top: calc(50% + 0%)
                left calc(50% + 25%)
                transform translate(-50%, -50%) translateX(-100%)
            
            &.is-buttonA
                top: calc(50% + 0%)
                left calc(50% + 25%)
                transform translate(-50%, -50%) translateY(100%)

            &::after
                content ""
                position absolute
                top -1px
                left -1px
                width calc(100% + 2px)
                height calc(100% + 2px)
                background #ffffff
                opacity 0.2
                border-radius 50%